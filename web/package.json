{
  "name": "financial-data-vue",
  "version": "0.1.0",
  "main": "./dist/entryPoint.js",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve --port 8888",
    "build": "tsc entryPoint.ts --module commonjs --outDir \"./dist\" | vue-cli-service build",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "chart.js": "^2.7.3",
    "csvtojson": "^2.0.8",
    "electron": "^3.0.8",
    "moment": "^2.22.2",
    "nedb": "^1.8.0",
    "vue": "^2.5.17",
    "vue-class-component": "^6.0.0",
    "vue-property-decorator": "^7.0.0",
    "vue-router": "^3.0.1"
  },
  "devDependencies": {
    "@types/chart.js": "^2.7.40",
    "@types/nedb": "^1.8.6",
    "@types/node": "^10.12.2",
    "@types/webpack-env": "^1.13.6",
    "@vue/cli-plugin-babel": "^3.1.1",
    "@vue/cli-plugin-typescript": "^3.1.1",
    "@vue/cli-service": "^3.1.1",
    "lint-staged": "^7.2.2",
    "node-sass": "^4.9.0",
    "sass-loader": "^7.0.1",
    "typescript": "^3.0.0",
    "vue-template-compiler": "^2.5.17"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
